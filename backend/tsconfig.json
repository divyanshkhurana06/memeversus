{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./node/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["node/src/*"],
      "@config/*": ["node/src/config/*"],
      "@services/*": ["node/src/services/*"],
      "@utils/*": ["node/src/utils/*"],
      "@types/*": ["node/src/types/*"],
      "@models/*": ["node/src/models/*"],
      "@middleware/*": ["node/src/middleware/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["node/src/**/*"],
  "exclude": ["node_modules", "dist"]
} 